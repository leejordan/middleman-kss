{
  "name": "middleman-kss",
  "version": "0.0.1",
  "description": "Middleman static site with kss styleguide generator",
  "main": "stylesheets.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/leejordan/middleman-kss.git"
  },
  "keywords": [
    "middleman-kss"
  ],
  "author": "@leejordan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leejordan/middleman-kss/issues"
  },
  "homepage": "https://github.com/leejordan/middleman-kss",
  "scripts": {
    "build": "node-sass-chokidar --precision 8 --output-style compressed source/stylesheets/site.css.scss styleguide/css/site.css",
    "watch": "node-sass-chokidar --watch --recursive --precision 8 --output-style compressed source/stylesheets/site.css.scss styleguide/css/site.css",
    "build:styleguide": "kss --config kss-config.json",
    "start": "./node_modules/.bin/http-server ./styleguide -a localhost -c10"
  },
  "devDependencies": {
    "node-sass-chokidar": "^0.0.3",
    "kss": "3.0.0-beta.23",
    "http-server": "^0.10.0"
  }
}
